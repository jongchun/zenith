<%- layout('layout') %>
<div>
    <h3><%- title %></h3>
    <h4>Are you sure you want to delete the following activity?</h4>

    <div class="alert alert-warning" role="alert" style="max-width: 400px;">Activity: <%= data.Activity %></div>

    <form method="post" action="/forms/activities/delete" >
        <input type="hidden" name="_id" value="<%= data._id %>" />
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a href="/forms/activities" class="btn btn-success">Cancel</a>
    </form>
</div>