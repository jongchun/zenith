<%- layout('layout') %>
<div>
    <h3><%- title %></h3>
    <hr />

    <form class="form-inline col-xs-6" method="post" action="/forms/activities">
        <% if (error != "") { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <div class="form-group">
            <input name="Activity" placeholder="Activity" class="form-control" />
        </div>
        <input type="submit" value="Add Activity" class="btn btn-success" />
        <a href="/forms/activities" class="btn btn-success">Cancel</a>
    </form>
</div>